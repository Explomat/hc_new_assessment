.year {
	margin-bottom: 32px;

	.year__header {
		line-height: 20px;
		padding: 15px;
	    background-color: #dbdbdb;
	    font-size: 12px;
	    background-image: linear-gradient(180deg, #f4f2f2, #dfdfdf);
	    //box-shadow: 0px 0px 8px -1px #b2b2b2;
	    text-align: left;
	    border: 1px solid #dbdbdb;
	    border-radius: 4px 4px 0 0;

		.year__title{
			color: #3a87ad;
			word-break: break-word;
		}
		.year__boss-fullname{
			color: #3a87ad;
			text-align: right;
			word-break: break-word;
		}
	}
}